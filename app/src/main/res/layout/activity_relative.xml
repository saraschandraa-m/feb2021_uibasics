<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_setup_wizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setup Wizard" />

    <TextView
        android:id="@+id/tv_setup_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setup_wizard"
        android:text="You can change this anytime in the settings" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_setup_desc"
        android:background="@drawable/bg_crect_1">


        <ImageView
            android:id="@+id/iv_pie_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pie_chart_img" />


        <TextView
            android:id="@+id/tv_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Setup" />


        <View
            android:id="@+id/vw_setup"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_below="@+id/tv_setup"
            android:background="#ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_setup"
            android:text="RECOMMENDED" />


    </RelativeLayout>

</RelativeLayout>